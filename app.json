{
  "expo": {
    "name": "Tradalyse",
    "slug": "tradalyse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tradalyse",
    "userInterfaceStyle": "automatic",
    "platforms": ["ios", "android", "web"],    // <-- AJOUTÃ‰
    "newArchEnabled": true,
    "description": "Trading Analytics Dashboard - Track your trades and analyze performance",
    "keywords": ["trading", "analytics", "portfolio", "finance", "charts"],
    "githubUrl": "https://github.com/heavyguidence/Tradalyse-Public",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tradalyse.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.tradalyse.app"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id-here"
      }
    }
  }
}
